{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 300
    },
    "background": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "taxonomies": {
      "collection": "taxonomy",
      "via": "articles",
      "dominant": true
    }
  }
}
